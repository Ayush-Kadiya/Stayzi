<% layout("/layouts/boilerplate") -%>

<div class="row mt-3 show-card">
  <div class="col-8 offset-2">
    <h2><%= listing.title %></h2>
  </div>
  <div class="card col-6 offset-2 listing-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body ml-0">
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">
        Price: â‚¹<%= (listing.price ?? 1000).toLocaleString("en-IN") %>
      </p>
      <p class="card-text">Country: <%= listing.country %></p>
      <p class="card-text">Location: <%= listing.location %></p>

      <div class="btnsg">
        <a class="btn btn-primary" href="/listings/<%=listing._id%>/edit"
          >Edit</a
        >
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
          <button class="btn add-btn">Delete</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-8 offset-2 mb-3">
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%=listing._id%>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          step="1"
          id="rating"
          name="review[rating]"
          value="3"
          class="form-range"
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>

        <textarea
          name="review[comment]"
          id="comment"
          rows="3"
          class="form-control"
          required
        ></textarea>

        <div class="invalid-feedback">Please provide a comment.</div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>

    <hr />
